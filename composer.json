{
    "name": "brianvarskonst/wp-dependency-injection",
    "description": "Symfony DI Container integration for WordPress",
    "type": "library",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Brian Sch√§ffner",
            "email": "burnify.design@gmail.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/brianvarskonst/wp-dependency-injection",
    "support": {
        "issues": "https://github.com/brianvarskonst/wp-dependency-injection/issues",
        "source": "https://github.com/brianvarskonst/wp-dependency-injection"
    },
    "keywords": [
        "wordpress",
        "wp",
        "Symfony",
        "dependency-injection",
        "dependency-injection-container"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "symfony/polyfill-php82": "^1",
        "psr/log": "^1.1",
        "symfony/dependency-injection": "^7.3",
        "symfony/config": "^7.3",
        "symfony/yaml": "^7.3"
    },
    "require-dev": {
        "inpsyde/php-coding-standards": "^1.0@RC",
        "phpunit/phpunit": "^11.5",
        "phpstan/phpstan": "^2.1",
        "ergebnis/composer-normalize": "^2.48",
        "phpstan/phpstan-strict-rules": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Brianvarskonst\\WordPress\\DependencyInjection\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brianvarskonst\\WordPress\\DependencyInjection\\\\Tests\\": "tests/src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true
        }
    },
    "scripts": {
        "cs": "./vendor/bin/phpcs -q --parallel=$(nproc) -s",
        "cs:analyze": "./vendor/bin/phpstan --no-progress",
        "cs:bf": "php -d error_reporting=24575 vendor/bin/phpcbf;exit 0",
        "test": [
            "@test:unit",
            "@test:integration"
        ],
        "test:unit": "@php ./vendor/bin/phpunit",
        "test:integration": "@php vendor/bin/phpcs -s --standard=Brianvarskonst integrationtests/testfile.php"
    },
    "extra": {
        "wordpress-install-dir": "vendor/wordpress/wordpress"
    }
}
