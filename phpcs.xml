<?xml version="1.0"?>
<ruleset name="Brianvarskonst Coding Standard">
    <description>Coding style</description>

    <arg value="sp"/>
    <arg name="parallel" value="80"/>
    <arg name="colors"/>
    <arg name="extensions" value="php"/>

    <file>./src</file>
    <file>./tests</file>
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <rule ref="Inpsyde"/>

    <rule ref="Inpsyde.CodeQuality.ElementNameMinimalLength">
        <properties>
            <property name="allowedShortNames" type="array" value="id"/>
        </properties>
    </rule>

    <rule ref="Inpsyde.CodeQuality.Psr4">
        <properties>
            <property
                name="psr4"
                type="array"
                value="Brianvarskonst\WordPress\DependencyInjection=>src,Brianvarskonst\WordPress\DependencyInjection\Tests=>tests" />
        </properties>
    </rule>

    <rule ref="Inpsyde.CodeQuality.NoAccessors">
        <exclude name="Inpsyde.CodeQuality.NoAccessors.NoSetter"/>
        <exclude name="Inpsyde.CodeQuality.NoAccessors.NoGetter"/>
    </rule>
</ruleset>
